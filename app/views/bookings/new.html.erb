<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Rent this sneaker</h3>
        <%= simple_form_for([@sneaker, @booking]) do |f| %>
          <%= f.input :start_date, label: 'Enter a starting date' %>
          <%= f.input :end_date, label: 'Enter an ending date' %>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to "Back", sneaker_path(@sneaker), class: "btn btn-back" %>
            <%= f.button :submit, 'Rent !', class: 'btn btn-flat' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
