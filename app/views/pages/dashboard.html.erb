<html>
  <head>
    <h1>My dashboard</h1>
  </head>

  <body>
    <h2>Sneakers waiting for acceptation </h2>
      <div class="main-containers">
        <div style="display: flex">
          <div id="cards" class='col-8 '>
            <% @current_user_bookings.each do |booking| %>
            <div id= "details">
              <%= booking.user_id %>
              <%= booking.sneaker_id %>
                Start date: <%= booking.start_date.strftime('%d-%m-%Y')%>
                End date: <%= booking.end_date.strftime('%d-%m-%Y')%>
              <div class="status-button" <% booking.approved %>>
                <% if booking.approved == nil %>
                Pending...
                <% elsif  booking.approved == true %>
                Accepted
                <% else %>
                Refused
                <% end %>
            </div>
          </div>
        </div>
      </div>

            <%= booking.review %>
            <%= booking.rating%>
        <% end %>
      </div>

      <h2> Shoes waiting for acceptation from owner </h2>
      <div class="row">
        <% @bookings_ordered.each do |b| %>
        <% booking = Booking.find(b["id"]) %>
          <div class='col'>
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
              <div class="card-body">
                <p class="card-text">
                  Start date: <%= booking.start_date%>
                  End date: <%= booking.end_date%>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">

                  </div>
                </div>
              </div>
            </div>
          </div>
            <%= booking.review %>
            <%= booking.rating%>
        <% end %>
      </div>

      <h3>>My sneakers</h3>

    <div class="row">
        <% @user.sneakers.each do |sneaker| %>
          <div class='col'>
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
              <div class="card-body">
                <p class="card-text">

                  <% if sneaker.image.attached? %>
                    <p><%= cl_image_tag sneaker.image.key, height: 300, width: 400, crop: :fill %></p>
                    <% else %>
                      <p><%= image_tag('sneak.png') %></p>
                  <% end %>
                  <p><%= sneaker.name %></p>
                  <p><%= sneaker.size %></p>
                  <p><%= sneaker.price %></p>

                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">

                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </body>
