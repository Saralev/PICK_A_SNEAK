<div class="dashboard-main-container">

  <div class="main-title">
    <hr ALIGN=RIGHT WIDTH="30%">
      <h1>My dashboard</h1>
  </div>

  <div class="dashboard-content-container">
    <div class="dashboard-content-title">
      <h2>🙏 Sneakers you want to rent 🙏</h2>
    </div>
    <div class="dashboard-cards">
      <% @current_user_bookings.each do |booking| %>
        <div class= "booking-card">
          <div class="sneaker-image">
              <% if booking.sneaker.image.attached? %>
              <%= cl_image_tag booking.sneaker.image.key, height: 300, width: 400, crop: :fill %></p>
              <% else %>
              <%= image_tag('sneak.png') %>
              <% end %>
          </div>
          <div class="sneaker-content">
            <div class="sneaker-content-details">
              <h5>Start date:</h5><h6><%= booking.start_date.strftime('%d/%m/%Y')%></h6>
            </div>
            <div class="sneaker-content-details">
              <h5>End date: </h5><h6><%= booking.end_date.strftime('%d/%m/%Y')%></h6>
            </div>
            <div class="sneaker-content-details">
              <h5>Model: </h5><h6><%= booking.sneaker.name %></h6>
            </div>
            <div class="sneaker-content-details">
              <h5>Owner Name: </h5><h6><%= booking.sneaker.user.first_name %></h6>
            </div>
          </div>
          <div class="status-button <%= booking.approved %>">
              <% if booking.approved == nil %>
                 <h3 id="pending">Pending..</h3>
              <% elsif  booking.approved == true %>
                 <h3 id="accepted">Accepted!!</h3>
              <% else %>
                 <h3 id="refused">Refused..</h3>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="dashboard-content-container">
    <div class="dashboard-content-title">
      <h2>🤩 Look! People want your sneaks' 🤩<h2>
    </div>
    <div class="dashboard-cards">
      <% @bookings_ordered.each do |booking| %>
        <div class= "booking-card">
          <div class="sneaker-image">
            <% if booking.sneaker.image.attached? %>
            <%= cl_image_tag booking.sneaker.image.key, height: 300, width: 400, crop: :fill %></p>
            <% else %>
            <%= image_tag('sneak.png') %>
            <% end %>
          </div>
          <div class="sneaker-content">
            <div class="sneaker-content-details">
              <h5>Start date:</h5><h6><%= booking.start_date.strftime('%d/%m/%Y')%></h6>
            </div>
            <div class="sneaker-content-details">
              <h5>End date: </h5><h6><%= booking.end_date.strftime('%d/%m/%Y')%></h6>
            </div>
            <div class="sneaker-content-details">
              <h5>Model: </h5><h6><%= booking.sneaker.name %></h6>
            </div>
            <div class="sneaker-content-details">
              <h5>Owner Name: </h5><h6><%= booking.sneaker.user.first_name %></h6>
            </div>
          </div>
          <div class="approve-refuse-btn">
            <h3 id="approve"><%= link_to "approve", approve_booking_path(booking)%></h3>
            <h3 id="refuse"><%= link_to "refuse", refuse_booking_path(booking)%></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="dashboard-content-container">
    <div class="dashboard-content-title">
      <h2>🤓 All my sneakers 🤓</h2>
    </div>
    <div class="dashboard-cards">
      <% @my_sneakers.each do |sneaker| %>
        <div class="sneaker-image">
          <% if sneaker.image.attached? %>
          <%= cl_image_tag sneaker.image.key, height: 300, width: 400, crop: :fill %></p>
          <% else %>
          <%= image_tag('sneak.png') %>
          <% end %>
        </div>
        <div class="sneaker-content">
          <p><%= sneaker.name %></p>
          <p><%= sneaker.size %></p>
          <p><%= sneaker.price %></p>
        </div>
      <% end %>
    </div>
  </div>

</div>
