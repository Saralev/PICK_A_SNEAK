
<div class="full-card">
  <div class="card-trip d-flex justify-content-between align-items-center">
    <div class="card-left">
      <h1><%= @sneaker.brand %></h2>
      <div class="img">
        <% if @sneaker.image.attached? %>
        <p><%= cl_image_tag @sneaker.image.key, height: 200, width: 800, crop: :fill %></p>
        <% else %>
          <p><%= image_tag('sneak.png') %></p>
      <% end %>
      </div>
    </div>
    <div class="card-trip-infos card-right">
      <div>
        <h2><%= "Name" %></h2>
        <h6><%= @sneaker.name %></h6>
        <hr>
        <h2><%= "Size" %></h2>
        <h5><%= @sneaker.size %></h5>
        <hr>
        <h2><%= "Description" %></h2>
        <p><%= @sneaker.description %></p>
        <hr>
        <h2><%= "Price" %></h2>
        <h5><%= @sneaker.price %><%= " $" %></h5>
        <hr>
      </div>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
      <div class="bouton">
        <%= link_to "Book now", new_sneaker_booking_path(@sneaker), class: "btn btn-flat" %>
      </div>
</div>
