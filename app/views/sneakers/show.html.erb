  <div class='container'>
    <div class="full-card">
      <div class="card-trip d-flex justify-content-between align-items-center">
        <div class="left d-flex flex-column align-items-center">
          <h1><%= @sneaker.brand %></h2>
          <% if @sneaker.image.attached? %>
            <div class="img" style="background-image: url('<%= cl_image_path @sneaker.image.key, height: 200, width: 800, crop: :fill %>')"></div>
          <% else %>
            <div class="img" style="background-image: url('https://images.unsplash.com/photo-1595950653106-6c9ebd614d3a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2787&q=80')"></div>
          <% end %>
        </div>
        <div class="card-trip-infos card-right">
          <div style="width: -webkit-fill-available;">
            <h2><%= "Name" %></h2>
            <h6><%= @sneaker.name %></h6>
            <hr>
            <h2><%= "Size" %></h2>
            <h5><%= @sneaker.size %></h5>
            <hr>
            <h2><%= "Description" %></h2>
            <p><%= @sneaker.description %></p>
            <hr>
            <h2><%= "Price" %></h2>
            <h5><%= @sneaker.price %><%= " $" %></h5>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to "Back", @origin_path, class: "btn btn-back" %>
              <%= link_to "Book now", new_sneaker_booking_path(@sneaker), class: "btn btn-flat" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
