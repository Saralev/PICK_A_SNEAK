<%= render 'shared/searchbar' %>

<h1> 8 sneakers found</h1>
<div class="main-containers">
  <div style="display: flex">
    <div id="cards" class='col-8 border border-danger'>
      <% @sneakers.each do |sneaker| %>
        <%= link_to sneaker_path(sneaker) do %>
          <div class= "card">
          <%= cl_image_tag sneaker.photo.key %>
          <div id= "description">
            <h4><%= sneaker.brand %></h4>
            <h4><%= sneaker.name %></h4>
            <h4><%= sneaker.size %></h4>
            <h4><%= sneaker.price %></h4>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="map border border-primary col-4">
      <%#= image_tag('map.png') %>
    </div>
  </div>
</div>
