<%= render 'shared/searchbar' %>


<h1> 8 sneakers found</h1>
<div class="main-container">
  <div style="display: flex">
    <div id="cards">
      <% @sneakers.each do |sneaker| %>
        <%= link_to sneaker_path(sneaker) do %>
          <div class= "card">
            <% if sneaker.image.attached? %>
              <p><%= cl_image_tag sneaker.image.key, height: 200, width: 300, crop: :fill %></p>
            <% else %>
              <p><%= image_tag('sneak.png') %></p>
            <% end %>
          <div id= "description">
            <h3><%= sneaker.brand %></h3>
            <h3><%= sneaker.name %></h3>
            <h3><%= sneaker.size %></h3>
            <h3><%= sneaker.price %></h3>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="map">
      <%= image_tag('map.png') %>
    </div>
  </div>
</div>
