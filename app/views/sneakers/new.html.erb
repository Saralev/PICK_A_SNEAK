
<%= simple_form_for [@sneaker] do |f| %>
  <%= f.input :brand %>
  <%= f.input :name %>
  <%= f.input :size %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :image, as: :file %>
  <%= f.submit "Create your sneaker !", class: "btn btn-primary" %>
<% end %>

<% if policy(Sneaker).create? %>
  <%= link_to "New sneaker", new_sneaker_path %>
<% end %>
